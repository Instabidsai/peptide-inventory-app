# ============================================
# Peptide Inventory App — Environment Variables
# Copy this file to .env and fill in real values
# ============================================

# ── Supabase (REQUIRED) ─────────────────────
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...your-anon-key
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key
DATABASE_URL=postgres://postgres.YOUR_PROJECT:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ── OpenAI (REQUIRED — powers AI chat + food analysis) ──
OPENAI_API_KEY=sk-your-openai-key-here

# ── Payment Processor (at least ONE required) ──
# Option A: Stripe (preferred for subscriptions + one-time payments)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Option B: PsiFi (crypto-friendly processor)
PSIFI_API_KEY=your-psifi-api-key
PSIFI_WEBHOOK_SECRET=whsec_your-psifi-webhook-secret

# ── Shipping (optional — Shippo) ────────────
SHIPPO_API_KEY=shippo_live_your-key-here
SHIP_FROM_NAME=Your Company Name
SHIP_FROM_STREET=123 Main St
SHIP_FROM_CITY=City
SHIP_FROM_STATE=FL
SHIP_FROM_ZIP=33000
SHIP_FROM_COUNTRY=US
SHIP_FROM_PHONE=5551234567
SHIP_FROM_EMAIL=shipping@yourcompany.com

# ── Email (optional — falls back to console log) ──
SMTP_RELAY_URL=https://api.resend.com/emails

# ── Tenant (REQUIRED — your organization ID from the organizations table) ──
DEFAULT_ORG_ID=your-org-uuid-here

# ── WooCommerce Sync (optional) ─────────────
WOO_URL=https://shop.yourcompany.com
WOO_USER=admin@yourcompany.com
WOO_APP_PASS=your-app-password-here
WOO_WEBHOOK_SECRET=your-woo-webhook-secret

# ── Address Autocomplete (optional — Geoapify free tier: 3000 req/day) ──
VITE_GEOAPIFY_KEY=your-geoapify-api-key

# ── Error Monitoring (optional — Sentry free tier) ──
VITE_SENTRY_DSN=https://your-dsn@o123456.ingest.sentry.io/123456

# ── Auto-Heal Pipeline (optional) ──
HEAL_EMAIL=you@example.com
RESEND_API_KEY=re_your-resend-api-key

# ── Site URL (REQUIRED for checkout redirects + invite links) ──
PUBLIC_SITE_URL=https://app.yourcompany.com
